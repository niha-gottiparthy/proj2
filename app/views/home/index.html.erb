<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('home-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Top Dog</h1>
          <hr class="small">
          <center>
            <% @top = Post.new %>
            <% if @posts %>
            <% @top = @posts.first %>
              <% @posts.each do |post| %>
                <% if post.likes > @top.likes %>
                  <% @top = post %>
                <% end %>
              <% end %>
            <% end %>
            <% if @top != NIL%>
              <%= render @top %>
            <% end %>
          </center>
        </div>
      </div>
    </div>
  </div>
</header>

